@model Code.Models.Catagory
@{ 
    string Update = "";
    if (Model.Id > 0)
    {
        Update = "Update";
    }
    else
    {
        Update = "Save";
    }
}
<form method="post">

    <div class="border p-4">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Catagory</h2>
        </div>
        <div class=" row">
            <div class=" col-8">
                <input type="hidden" id="@Model.Id" name="@Model.Id" value="@Model.Id" />
                <div class=" form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input name="Name" id="Name" class="form-control" value="@Model.Name" />
                       
                    </div>
                </div>


                <div class=" form-group row">
                    <div class="col-4">
                        <label asp-for="Displayorder"></label>
                    </div>
                    <div class="col-8">
                        <input name="Displayorder" id="Displayorder" class="form-control" value="@Model.Displayorder" />
                        
                    </div>
                </div>

                <div class=" form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="  btn btn-info w-100" value="Update" id="Save" />
                        </div>
                        <div class="col">
                            <a asp-action="Indexs" class=" btn btn-success w-100">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>

